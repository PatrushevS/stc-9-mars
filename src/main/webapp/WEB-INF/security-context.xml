    <beans:bean id="dataSource"
                class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <beans:property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <beans:property name="url" value="jdbc:mysql://sql7.freesqldatabase.com:3306/sql7239469" />
        <beans:property name="username" value="sql7239469" />
        <beans:property name="password" value="vrKWZga2bt" />
    </beans:bean>

    <beans:bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>

    <authentication-manager alias="authenticationManager">
        <authentication-provider>
            <password-encoder ref="encoder"/>
            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query=
                                       "select login, hash_password, enabled from users where login=?"
                               authorities-by-username-query=
                                       "select login, permission_group from users where login =?" />
        </authentication-provider>
    </authentication-manager>

</beans:beans>